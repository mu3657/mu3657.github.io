---
import Layout from '../layouts/Layout.astro';
import Background from '../components/Background.astro';
import Header from '../components/Header.astro';
import Portrait from '../components/Portrait.astro';
---

<Layout title="About - Disco Elysium Archive">
	<Background />
	<Header showSearch={false} />
    
	<!-- Main Content Wrapper -->
	<div class="flex flex-col min-h-screen w-full relative z-20 items-center">
		
		<main class="w-full md:w-[60%] lg:w-[50%] flex-grow relative flex flex-col items-stretch pt-[6rem] md:pt-[14rem] px-8 md:px-[--spacing-gutter] pb-16 min-h-screen" 
			style="background-image: url('/images/single-page-content-bg_htmvo8.png'); background-repeat: repeat-y; background-position: center top; background-size: 100% auto;">
            
            <div class="mb-12 text-center max-w-3xl mx-auto">
                <h1 class="font-headline text-3xl md:text-5xl text-dark-black uppercase tracking-widest mb-8">
                    About
                </h1>
                
                <div class="font-body text-off-white/90 text-lg leading-relaxed space-y-6 text-left">
                    <p>
                        This is a personal blog inspired by the aesthetic of <em>Disco Elysium</em>. 
                        It serves as an archive of thoughts, updates, and reflections.
                    </p>
                    <p>
                        Built with Astro and Tailwind CSS.
                    </p>
                </div>
            </div>

		</main>
	</div>
</Layout>
